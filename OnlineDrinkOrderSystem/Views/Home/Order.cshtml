                                        <td><a href="#" data-target="#orderDeatilModal" data-toggle="modal"><i class="fa fa-external-link"></i></a></td>
                                    </tr>*@
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- order-main-area-end -->